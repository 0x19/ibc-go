{
  "ignorePatterns": [
    {
      "pattern": "(localhost)"
    },
    {
      "pattern": "^@site/"
    }
  ],
  "replacementPatterns": [
    {
      "pattern": "^(?=.*(?:architecture|event))(?!.*#)(?!.*\\.\\w+$)(?!.*/$)(.*)",
      "replacement": "$1.md"
    },
    {
      "pattern": "^(?=.*(?:architecture|event))(?!.*\\.\\w+)([^#]*)(#.*|$)",
      "replacement": "$1.md$2"
    },
    {
      "pattern": "^(\\/)",
      "replacement": "{{BASEURL}}/docs/"
    }
  ],
  "retryOn429": true,
  "retryCount": 3,
  "fallbackRetryDelay": "10s"
}
